<h1>Listing teams</h1>
<%= link_to "Search", search_teams_path %>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Active?</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
    <tr>
      <td><%= link_to "#{team.city} #{team.name}", team %></td>
      <td><%= team.active? ? "Yes" : "No" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
